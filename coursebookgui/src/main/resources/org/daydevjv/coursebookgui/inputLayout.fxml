                <HBox.margin>
                    <Insets left="20.0" right="20.0" top="5.0"/>
                </HBox.margin>
            </Label>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </BorderPane.margin>
        </HBox>
    </top>
    <center>
        <VBox alignment="CENTER" prefHeight="149.0" prefWidth="295.0" spacing="20.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <Label text="Input View"/>
        </VBox>
    </center>
</BorderPane>
