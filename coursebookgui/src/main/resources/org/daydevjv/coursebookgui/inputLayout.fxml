<?import javafx.scene.layout.*?>

<BorderPane prefHeight="200.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/10.0.2-internal"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.daydevjv.coursebookgui.InputLayoutController">
    <top>
        <HBox prefHeight="0.0" prefWidth="200.0">
            <ChoiceBox fx:id="choiceDisk" prefWidth="150.0"/>
