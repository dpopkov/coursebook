<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.daydevjv.coursebookgui.MainLayoutController">
    <top>
        <HBox prefHeight="0.0" prefWidth="200.0">
            <ChoiceBox fx:id="choiceDisk" prefWidth="150.0" />
            <Label fx:id="lblSelectedDisk" text="Selected disk:">
                <HBox.margin>
                    <Insets left="20.0" right="20.0" top="5.0" />
                </HBox.margin>
            </Label>
         <ChoiceBox fx:id="choiceLayout" prefWidth="150.0" />
        </HBox>
    </top>
   <center>
      <StackPane fx:id="centerStackPane" prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </center>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</BorderPane>
